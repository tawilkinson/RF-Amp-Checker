<Window x:Class="RS232check.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RS232check"
        mc:Ignorable="d"
        Title="RF Amp Status" Height="261.364" Width="396
        ">
    <Grid>
        <Grid Margin="0,0,0,22">
            <Button x:Name="btnPorts" Content="Ports" HorizontalAlignment="Left" Height="25" Margin="32,23,0,0" VerticalAlignment="Top" Width="62" Click="btnGetSerialPorts_Click"/>
            <TextBox x:Name="txtbInfo" Height="106" Margin="32,92,32,0" TextWrapping="Wrap" Text="Click Ports to load..." VerticalAlignment="Top"/>
            <ComboBox x:Name="cboPorts" HorizontalAlignment="Left" Height="25" Margin="115,23,0,0" VerticalAlignment="Top" Width="160"/>
            <Button x:Name="btnPortState" Content="Closed" Height="24" Margin="294,24,32,0" VerticalAlignment="Top" Click="btnPortStatus_Click"/>
            <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Height="25" Margin="294,62,0,0" VerticalAlignment="Top" Width="62" Click="btnSend_Click"/>
            <ComboBox x:Name="cboCommand" HorizontalAlignment="Left" Height="25" Margin="115,62,0,0" VerticalAlignment="Top" Width="160"/>
        </Grid>

    </Grid>
</Window>
